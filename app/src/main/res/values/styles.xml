<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 启动页 主题，windowBackground 属性设置 启动背景图片可以避免 白屏或黑屏问题. -->
    <style name="SplashTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@drawable/img_splash</item>
    </style>

    <!-- 透明背景，避免 Activity 跳转动画的黑屏. -->
    <style name="TransparentTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_from_bottom_to_in</item>
        <item name="android:windowExitAnimation">@anim/popup_from_bottom_to_out</item>
    </style>

</resources>
