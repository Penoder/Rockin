<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.rockin.view.splash.GuideActivity" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rockin.widget.CustomVideoView
            android:id="@+id/video_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/linear_guideIndicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_32"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dimen_72"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_12" />

        <!-- 主标题. -->
        <TextView
            android:id="@+id/tv_guideMainTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="136dp"
            android:background="@color/transparent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/commonTextWhite"
            android:textSize="@dimen/common_size"
            android:textStyle="bold"
            tools:text="每日编辑精选，一如既往" />

        <!-- 副标题. -->
        <TextView
            android:id="@+id/tv_guideSubTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_24"
            android:layout_gravity="bottom"
            android:layout_marginBottom="110dp"
            android:background="@color/transparent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/secondTextWhite"
            android:textSize="@dimen/common_size"
            android:textStyle="italic|bold"
            tools:text="Daily appetizers for you eyes, as always" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent" />

        <ImageView
            android:id="@+id/iv_arrowUpOne"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="36dp"
            android:src="@drawable/icon_arrows_up_white" />

        <ImageView
            android:id="@+id/iv_arrowUpTwo"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="30dp"
            android:src="@drawable/icon_arrows_up_white" />

    </FrameLayout>

</layout>