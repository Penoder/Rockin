<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_homeBanner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 仿开眼首页广告位，不支持轮播. -->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_homeBanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_240" />

    <!-- 主标题. -->
    <TextView
        android:id="@+id/tv_mainTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dimen_48"
        android:gravity="center"
        android:textColor="@color/commonTextWhite"
        android:textSize="@dimen/small_title_size"
        android:layout_marginLeft="@dimen/dimen_64"
        android:layout_marginRight="@dimen/dimen_64"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        tools:text="艺术展览馆里的[马桶艺术]" />

    <!-- 副标题. -->
    <TextView
        android:id="@+id/tv_subTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_24"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginRight="@dimen/dimen_48"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="@dimen/dimen_24"
        android:gravity="center"
        android:textColor="@color/secondTextWhite"
        android:textSize="@dimen/small_size"
        tools:text="致敬马塞尔~杜尚，现代艺术的守护神" />

    <!-- 添加广告位的标题和指示器. -->
    <LinearLayout
        android:id="@+id/linear_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_32"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_12" />

    <ImageView
        android:id="@+id/imgView_search"
        android:layout_width="@dimen/dimen_32"
        android:layout_height="@dimen/dimen_32"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dimen_12"
        android:layout_marginTop="@dimen/dimen_12"
        android:padding="@dimen/dimen_4"
        android:src="@drawable/icon_search" />

</FrameLayout>